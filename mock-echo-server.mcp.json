{
  "name": "MockEchoServer",
  "description": "A simple mock server that echoes back tool inputs. Tests npx URL inference.",
  "url": "@mcpfinder/mock-echo-server", 
  "protocol_version": "MCP/1.0",
  "capabilities": [
    { 
      "name": "echo", 
      "type": "tool",
      "description": "Echoes the input string.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "message": { "type": "string", "description": "The message to echo." }
        },
        "required": ["message"]
      }
    }
  ],
  "tags": ["mock", "echo", "testing", "npx-inference"],
  "auth": { 
    "type": "api-key", 
    "instructions": "Get your key from echo.example.com/api-keys" 
  }
} 